package arrays;

import java.util.Arrays;

public class Exercicio {
	
	public static void main(String[] args) {
		
		double[] notasAlunoA = new double[4];
		System.out.println(Arrays.toString(notasAlunoA));
		
		notasAlunoA[0] = 7.9;
		notasAlunoA[1] = 8;
		notasAlunoA[2] = 8;
		notasAlunoA[3] = 7.9;
		
		System.out.println(Arrays.toString(notasAlunoA));
		
		double totalAlunoA = 0;
		for(int i = 0; i < notasAlunoA.length ; i++) {
			totalAlunoA += notasAlunoA[i];
		}
		
		System.out.println(totalAlunoA / notasAlunoA.length);
		
		final double notaArmazenada = 5.9;
		double[] notasAlunoB = { 6.9, 8.9, notaArmazenada, 10};
		
		double totalAlunoB = 0;
		for (int i = 0; i < notasAlunoB.length; i++) {
			totalAlunoB += notasAlunoB[i];
		}
		
		// Usando forbeach
		
		double[] notasAlunoB1 = { 6.9, 8.9, notaArmazenada, 10};
		double totalAlunoB1 = 0;
		
		for (double nota : notasAlunoB1) {
			totalAlunoB1 += nota;
		}
		
		double media = totalAlunoB1 / notasAlunoB1.length;
		System.out.println(totalAlunoB / notasAlunoB.length);
		System.out.println(media);
		
		if(notasAlunoB1.length >= 7) {
			System.out.println("Aluno aprovado!");
		}else if (notasAlunoB1.length < 7 && notasAlunoB1.length >= 4) {
			System.out.println("Em recuperação!");
		}else if (notasAlunoB1.length < 4) {
			System.out.println("Reprovado!");
		}else {
			System.out.println("Valor inválido");
		}
	}
}
